<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->

    <style name="Theme.MyNotepad" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/material_A100</item>
        <item name="colorPrimaryVariant">@color/material_A100_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/material_A100_light</item>
        <item name="colorSecondaryVariant">@color/material_A100_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/material_A100</item>
        <!-- Customize your theme here. -->
        <item name="android:windowFullscreen">false</item>
        <item name="android:navigationBarColor">@color/white</item>
    </style>

</resources>