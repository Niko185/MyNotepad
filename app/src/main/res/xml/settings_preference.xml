<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory
        android:title="@string/preference_category_general">

        <ListPreference
            android:defaultValue="Linear memory"
            android:entries="@array/note_style_array"
            android:entryValues="@array/note_style_memory_array"
            android:icon="@drawable/ic_style"
            android:key="key_note_style"
            android:title="@string/list_preference_note_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="hh:mm - dd/MM/yyyy"
            android:entries="@array/time_format_array"
            android:entryValues="@array/time_format_memory_array"
            android:icon="@drawable/ic_time"
            android:key="key_time_format"
            android:title="@string/list_preference_time_title"
            app:useSimpleSummaryProvider="true" />

        <Preference
            android:defaultValue="3"
            android:icon="@drawable/ic_premium"
            android:summary="@string/list_preference_premium_summary"
            android:title="@string/list_preference_premium" />
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/preference_category_theme">
        <ListPreference
            android:defaultValue="Standard theme memory "
            android:entries="@array/theme_colors_array"
            android:entryValues="@array/theme_colors_memory_array"
            android:icon="@drawable/ic_palette"
            android:key="key_theme"
            android:title="@string/color_theme"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>


    <PreferenceCategory android:title="@string/preference_category_text_size">
        <ListPreference
            android:defaultValue="20"
            android:entries="@array/text_size_array"
            android:entryValues="@array/text_size_memory_array"
            android:icon="@drawable/ic_format_size"
            android:key="key_text_size_title"
            android:title="@string/list_preference_text_size_title"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:defaultValue="16"
            android:entries="@array/text_size_array"
            android:entryValues="@array/text_size_memory_array"
            android:icon="@drawable/ic_format_size"
            android:key="key_text_size_description"
            android:title="@string/list_preference_text_size_description"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>
</PreferenceScreen>